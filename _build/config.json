{
    "name": "FASelect",
    "lowCaseName": "faselect",
    "description": "Font Awesome Select Input for Content Blocks in MODX CMS",
    "author": "YJ Tso @sepiariver",
    "version": "1.1.0-beta1",
    "package": {
        "elements": {
            "plugins": [{
                "name": "FASelect",
                "events": ["ContentBlocks_RegisterInputs", "OnManagerPageInit"],
                "properties": [{
                    "name": "cssUrl",
                    "value": "https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"
                }, {
                    "name": "regexPrefix",
                    "value": "fa-"
                }, {
                    "name": "titleCaseLabels",
                    "value": true,
                    "type": "modx-combo-boolean"
                }, {
                    "name": "classPrefix",
                    "value": "fa-"
                }, {
                    "name": "excludeClasses",
                    "value": "ul,li"
                }, {
                    "name": "refreshOnCacheClear",
                    "value": false,
                    "type": "modx-combo-boolean"
                }]
            }],
            "snippets": [{
                "name": "fontAwesomeInputOptions",
                "properties": [{
                    "name": "cssUrl",
                    "value": "https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"
                }, {
                    "name": "regexPrefix",
                    "value": "fa-"
                }, {
                    "name": "titleCaseLabels",
                    "value": true,
                    "type": "modx-combo-boolean"
                }, {
                    "name": "classPrefix",
                    "value": "fa-"
                }, {
                    "name": "excludeClasses",
                    "value": "ul,li"
                }, {
                    "name": "mode",
                    "value": "tv"
                }, {
                    "name": "operator",
                    "value": ""
                }, {
                    "name": "separator",
                    "value": ""
                }]
            }]
        },
        "systemSettings": [{
            "key": "faselect.output_path",
            "value": "{assets_path}components/faselect/js/"
        }, {
            "key": "faselect.output_filename",
            "value": "faselectinputoptions.json"
        }]
    }
}
